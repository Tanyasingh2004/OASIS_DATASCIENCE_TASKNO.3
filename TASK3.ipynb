
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load datasets
df1 = pd.read_csv("oasis/Unemployment_Rate_upto_11_2020.csv")
df2 = pd.read_csv("oasis/Unemployment in India.csv")

# Preview first dataset
print("Dataset 1 - Unemployment Rate upto Nov 2020")
print(df1.head(), "\n")
print(df1.info(), "\n")

# Preview second dataset
print("Dataset 2 - Unemployment in India")
print(df2.head(), "\n")
print(df2.info(), "\n")

# Rename columns (if needed, since some datasets have spaces in column names)
df1.columns = df1.columns.str.strip().str.replace(" ", "_")
df2.columns = df2.columns.str.strip().str.replace(" ", "_")

# Check missing values
print("Missing values in df1:\n", df1.isnull().sum(), "\n")
print("Missing values in df2:\n", df2.isnull().sum(), "\n")

# =======================
# ðŸ“Š Data Visualization
# =======================

# Plot unemployment rate over time
plt.figure(figsize=(12,6))
sns.lineplot(data=df1, x="Date", y="Estimated_Unemployment_Rate%")
plt.title("Unemployment Rate Over Time (Dataset 1)")
plt.xticks(rotation=45)
plt.show()

# Compare Unemployment by Region (Dataset 2)
plt.figure(figsize=(12,6))
sns.barplot(data=df2, x="Region", y="Estimated Unemployment Rate (%)", palette="viridis")
plt.xticks(rotation=90)
plt.title("Unemployment Rate by Region (Dataset 2)")
plt.show()

# Heatmap of correlation (Dataset 1)
plt.figure(figsize=(8,6))
sns.heatmap(df1.corr(numeric_only=True), annot=True, cmap="coolwarm")
plt.title("Correlation Heatmap - Dataset 1")
plt.show()

# =======================
# Extra: Grouped Analysis
# =======================

# Average unemployment by region
region_avg = df2.groupby("Region")["Estimated Unemployment Rate (%)"].mean().sort_values()

plt.figure(figsize=(10,6))
region_avg.plot(kind="bar", color="orange")
plt.title("Average Unemployment Rate by Region (Dataset 2)")
plt.ylabel("Unemployment Rate (%)")
plt.show()